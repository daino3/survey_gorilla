<h1>Sign in</h1>
<form action='/login' method='POST'>
  <label for="login_email">Email</label><br>
  <input type="email" name="email" id="login_email"><br>
  <label for="login_password">Password</label><br>
  <input type="password" name="password"><br><br>
  <input type="submit" value="Submit!" name="submit">
</form>

<h1>Sign up</h1>
<form action='/signup' method='POST'>
  <label for="signup_username">Name</label><br>
  <input type="text" name="input[username]" id="signup_username"><br>
  <label for="signup_email">Email</label><br>
  <input type="email" name="input[email]" id="signup_email"><br>
  <label for="signup_password">Password</label><br>
  <input type="password" name="input[password]" id="signup_password"><br>
  <label for="password_confirmation">Confirm</label><br>
  <input type="password" name="input[password_confirmation]" id="password_confirmation"><br><br>
  <input type="submit" value="Submit!" name="submit">
</form>
