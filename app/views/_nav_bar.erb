<div class="navbar">
  <a href="/"><img src="/images/henry_logo.png" height="60px"></a>
  <% if current_user %>
    <a href='/create_survey'>Create Survey</a>
    <a href='/view_all_surveys_take'>Take Survey</a>
    <a href='/view_survey'>View Survey</a>
    <a href='/logout' class="login_link">Logout</a>
  <% else %>
    <div class="login_link">
      <form action="/login" method="post">
        <% if @login_error %>
          <span id="login_error"><%= @login_error %></span>
        <% end %>
        <input type="email" name="email" id="login_email" placeholder="email">
        <input type="password" name="password" placeholder="password">
        <input type="submit" value="Login">
      </form>
    </div>
  <% end %>
</div>
