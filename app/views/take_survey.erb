<div class="container">
  <h1><%= @survey.title %></h1>
  <% if @survey.photo %>
    <img src="<%= @survey.photo.file.url(:thumb) %>">
  <% end %>
  <form action="/take_survey" method="post">
    <% @survey.questions.each do |question| %>
      <p><%= question.prompt %></p>
      <% question.choices.each do |choice| %>
        <p><input type="radio" name="response_input[<%= question.id %>]" value="<%= choice.id %>"> <%= choice.option %></p>
      <% end %>
    <% end %>
    <input type="hidden" name="survey_id" value="<%= @survey.id %>">
    <input type="submit" value="Submit">
  </form>
</div>
